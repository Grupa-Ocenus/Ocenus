<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ocenus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/ocenusowski</item>
        <item name="colorPrimaryVariant">@color/ocenusowski</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocenusowski</item>
        <item name="colorSecondaryVariant">@color/ocenusowski</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="navigationViewBackground">@color/Pasek_boczny_noc</item>



    </style>


    <style name="EditTextStyle_Dark" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ocenus_ramka_noc</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTextStyle_Dark" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ocenus_ramka_noc</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkTheme" parent="Base.Theme.Ocenus">
        <item name="android:background">@color/motyw_noc</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Użyj odwołania do navigationViewBackground -->
        <item name="android:background">?attr/navigationViewBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>