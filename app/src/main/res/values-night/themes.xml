<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ocenus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/ocenusowski</item>
        <item name="colorPrimaryVariant">@color/ocenusowski</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocenusowski</item>
        <item name="colorSecondaryVariant">@color/ocenusowski</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

    </style>

    <style name="EditTextStyle_Dark" parent="Widget.AppCompat.EditText">
        <!-- Ustaw tło ramki na ciemne tło -->
        <item name="android:background">@drawable/ocenus_ramka_noc</item>
        <!-- Ustaw kolor tekstu na biały -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTextStyle_Dark" parent="Widget.AppCompat.EditText">
        <!-- Ustaw tło ramki na ciemne tło -->
        <item name="android:background">@drawable/ocenus_ramka_noc</item>
        <!-- Ustaw kolor tekstu na biały -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>