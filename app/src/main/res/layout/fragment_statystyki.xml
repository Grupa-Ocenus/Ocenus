<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".StatystykiFragment">

    <!-- ScrollView to enable scrolling if the list is long -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LinearLayout to hold the list of course averages -->
        <LinearLayout
            android:id="@+id/layout_course_averages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- This LinearLayout will be populated dynamically with course averages -->

        </LinearLayout>


    </ScrollView>
</LinearLayout>
