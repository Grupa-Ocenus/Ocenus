<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ocenus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocenusowski</item>
        <item name="colorPrimaryVariant">@color/ocenusowski</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocenusowski</item>
        <item name="colorSecondaryVariant">@color/ocenusowski</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Ocenus" parent="Base.Theme.Ocenus" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="EditTextStyle_Light" parent="Widget.AppCompat.EditText">
        <!-- Ustaw tło ramki na jasne tło -->
        <item name="android:background">@drawable/ocenus_ramka</item>
        <!-- Ustaw kolor tekstu na domyślny -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginTextStyle_Light" parent="Widget.AppCompat.EditText">
        <!-- Ustaw tło ramki na jasne tło -->
        <item name="android:background">@drawable/ocenus_ramka</item>
        <!-- Ustaw kolor tekstu na domyślny -->
        <item name="android:textColor">@color/black</item>
    </style>

</resources>