<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ocenus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocenusowski</item>
        <item name="colorPrimaryVariant">@color/ocenusowski</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ocenusowski</item>
        <item name="colorSecondaryVariant">@color/ocenusowski</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="navigationViewBackground">@color/white</item>


    </style>

    <style name="Theme.Ocenus" parent="Base.Theme.Ocenus">
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="EditTextStyle_Light" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ocenus_ramka</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginTextStyle_Light" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ocenus_ramka</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LightTheme" parent="Base.Theme.Ocenus">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="NavigationViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Użyj odwołania do navigationViewBackground -->
        <item name="android:background">?attr/navigationViewBackground</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>




</resources>